/* nav */
.hamburger-menu__<%= uid %> {
  position: absolute;
}
.hamburger-menu__<%= uid %> .nav-container {
  xxposition: absolute;
  z-index: 10;
}
.hamburger-menu__<%= uid %> nav {
  position: fixed;
  top: 0;
  height: 0;
  left: -300px;
  width: 300px;
  background-color: #ededed;
  transition: left 1s ease, height 0s ease 1s;
}
.hamburger-menu__<%= uid %>.open nav {
  left: 0;
  height: 100vh;
  transition: left 1s ease, height 0s ease 0s;
}

/* hamburger button */
.hamburger-menu__<%= uid %> .hamburger-btn {
    z-index: 20;
    cursor: pointer;
}
.hamburger-menu__<%= uid %> .hamburger-btn span {
    display: block;
    width: 30px;
    height: 5px;
    margin-bottom: 3px;
    position: relative;
    background-color: black;
    border: 1px solid white;
    border-radius: 3px;
    transition: border-color 0.1s ease-in,
      opacity 0.1s ease-in,
      transform 0.1s ease-in,
      background 0.1s ease-in
}

.hamburger-menu__<%= uid %>.open .hamburger-btn span {
    border-color: rgba(255, 255, 255, 0);
}

.hamburger-menu__<%= uid %> .hamburger-btn span:first-child {
    transform-origin: 4px -2px;
}
.hamburger-menu__<%= uid %>.open .hamburger-btn span:first-child {
    transform: rotate(45deg) translate(7px, -4px);
}

.hamburger-menu__<%= uid %>.open .hamburger-btn span:nth-last-child(2) {
    opacity: 0;
}

.hamburger-menu__<%= uid %> .hamburger-btn span:nth-child(3) {
    transform-origin: -11px 4px;
}
.hamburger-menu__<%= uid %>.open .hamburger-btn span:nth-child(3) {
    transform: rotate(-45deg) translate(0, 12px);
}

