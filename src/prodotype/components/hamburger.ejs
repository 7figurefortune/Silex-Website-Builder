<!-- inspired by https://codepen.io/erikterwan/pen/EVzeRP -->
<div class="hamburger-menu__<%= uid %> closed">
    <div class="hamburger-btn <% if(fixed) { %>fixed<% } %>">
      <span></span>
      <span></span>
      <span></span>
    </div>
    <div class="nav-container fixed prevent-scale" silex-fixed-style-left="0" silex-fixed-style-top="0">
      <nav role="navigation">
          <ul class="">
          <% for(var idx in links) { %>
              <li><a
                  <% for(var attrName in links[idx].properties) { %>
                      <%= attrName %>="<%= links[idx].properties[attrName] %>"
                  <% } %>
              ><%= links[idx].text %></a></li>
          <% } %>
          </ul>
      </nav>
    </div>
</div>
<script>
(function() {
  function close() {
    $('.hamburger-menu__<%= uid %>').removeClass('open');
    $('.hamburger-menu__<%= uid %>').addClass('closed');
  }
  function toggle() {
    $('.hamburger-menu__<%= uid %>').toggleClass('open');
    $('.hamburger-menu__<%= uid %>').toggleClass('closed');
  }
  $('.hamburger-menu__<%= uid %> .hamburger-btn').click(function() { toggle(); });
  window.addEventListener('scroll', function() { close(); });
})();
</script>

